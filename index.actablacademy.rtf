    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const navLinks = document.querySelectorAll('.nav-link');
            const pages = {
                '#home': document.getElementById('home-page'),
                '#alice': document.getElementById('alice-page'),
                '#hotel-effectiveness': document.getElementById('hotel-effectiveness-page'),
                '#profitsword': document.getElementById('profitsword-page'),
                '#transcendent': document.getElementById('transcendent-page'),
                '#actabl-academy-plus': document.getElementById('actabl-academy-plus-page'),
                '#alice-100-intro': document.getElementById('alice-100-intro'),
                '#alice-200-managers': document.getElementById('alice-200-managers'),
                '#alice-200-housekeeping': document.getElementById('alice-200-housekeeping'),
                '#alice-200-maintenance': document.getElementById('alice-200-maintenance'),
                '#alice-200-front-desk': document.getElementById('alice-200-front-desk')
            };

            function showPage(pageId) {
                // Hide all pages
                Object.values(pages).forEach(page => page.classList.remove('active'));

                // Show the requested page
                const targetPage = pages[pageId];
                if (targetPage) {
                    targetPage.classList.add('active');
                }
            }

            navLinks.forEach(link => {
                link.addEventListener('click', function(event) {
                    event.preventDefault();
                    // Get the page ID from the link's href attribute
                    const pageId = this.getAttribute('href').split('#')[1];
                    showPage(`#${pageId}`);
                });
            });

            // Handle initial page load based on URL hash
            const initialHash = window.location.hash || '#home';
            showPage(initialHash);
        });
    </script>
